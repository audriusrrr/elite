<!-- START @PAGE CONTENT -->
<section id="page-content">

    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-book"></i>Orders <span>All upcoming, active and done orders for the day</span></h2>
    </div><!-- /.header-content -->
    <!--/ End page header -->

    <!-- Start body content -->
    <div class="body-content animated fadeIn">

        <div class="row">
            <div class="col-md-12">

                <!-- Start sample table -->
                <div class="rounded mb-20">
                    <table id="datatable-dom" class="table table-striped table-theme">
                        <thead>
                        <tr>
                            <th class="text-center border-right">Order ID</th>
                            <th>Pickup Time</th>
                            <th>Client</th>
                            <th>Pickup Place</th>
                            <th>Destination Place</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% _.each(orders, function (order) { %>
                                <tr>
                                    <td class="text-center border-right"><a href="/driver/job/<%= order.id %>">HD-<%= order.orderid %></a></td>
                                    <td><%= order.pickupdate %> <%= order.pickuptime %></td>
                                    <td><%= order.clientfname %> <%= order.clientlname %></td>
                                    <td><%= order.pickuplocation %></td>
                                    <td><%= order.finaldestination %></td>
                                    <td>
                                    <% if(order.status == 'not started') { %>
                                        <span class="badge">Not Started</span>
                                        <% if(order.ordertime < Math.floor(Date.now() / 1000)) { %>
                                            <span class="animate-pulse status-error label label-danger rounded">!</span>
                                        <% } %>
                                    <% } if(order.status == 'in progress') { %>
                                        <span class="badge badge-warning">In Progress</span>
                                    <% } if(order.status == 'did not show up') { %>
                                        <span class="badge badge-danger">Did not show up</span>
                                    <% } if(order.status == 'delivered') { %>
                                        <span class="badge badge-success">Delivered</span>
                                    <% } if(order.status == 'invoiced') { %>
                                        <span class="badge badge-success">Delivered</span>
                                    <% } %>
                                    </td>
                                </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div><!-- /.table-responsive -->
                <!--/ End sample table -->

            </div>
        </div><!-- /.row -->

    </div><!-- /.body-content -->
    <!--/ End body content -->

</section><!-- /#page-content -->
<!--/ END PAGE CONTENT -->