<!-- START @PAGE CONTENT -->
<section id="page-content">

    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-book"></i> Order</h2>
    </div><!-- /.header-content -->
    <!--/ End page header -->

    <!-- Start body content -->
    <div class="body-content animated fadeIn">

        <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-4">

            <div class="panel rounded shadow">
                <div class="panel-body bg-facebook">
                    <ul class="list-unstyled no-margin">
                        <li class="text-center">
                            <i class="fa fa-book fa-5x" style="color:white;"></i>
                        </li>
                        <li class="text-center">
                            <h4 class="text-capitalize">HD-<%= order.orderid %></h4>
                        </li>
                        <li class="text-center">
                        <% if(order.status == 'not started') { %>
                            <span class="badge">Not Started</span>
                        <% } if(order.status == 'in progress') { %>
                            <span class="badge badge-warning">In Progress</span>
                        <% } if(order.status == 'did not show up') { %>
                            <span class="badge badge-danger">Did not show up</span>
                        <% } if(order.status == 'delivered') { %>
                            <span class="badge badge-success">Delivered</span>
                        <% } if(order.status == 'invoiced') { %>
                            <span class="badge badge-default">Invoiced</span>
                        <% } %>
                        </li>
                    </ul><!-- /.list-unstyled -->
                </div><!-- /.panel-body -->
            </div>

            <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <div class="panel panel-success rounded shadow">
                            <div class="panel-heading text-center">
                                <p class="inner-all no-margin">
                                    <i class="fa fa-calendar fa-5x"></i>
                                </p>
                            </div><!-- /.panel-heading -->
                            <div class="panel-body text-center">
                                <p class="h4 no-margin text-strong">
                                <%
                                var a = new Date(order.ordertime*1000);
                                var months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
                                var year = a.getFullYear();
                                var month = months[a.getMonth()];
                                var date = a.getDate();
                                var hour = a.getHours();
                                var min = a.getMinutes();
                                var sec = a.getSeconds();
                                var time = date + ',' + month + ' ' + year + ' ' + hour + ':' + min;
                                %>
                                <%= time %>
                                </p>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div>

                    <div class="col-md-6 col-sm-6 col-xs-6">
                        <div class="panel panel-danger rounded shadow">
                            <div class="panel-heading text-center">
                                <p class="inner-all no-margin">
                                    <i class="fa fa-clock-o fa-5x"></i>
                                </p>
                            </div><!-- /.panel-heading -->
                            <div class="panel-body text-center">
                                <p class="h4 no-margin text-strong" style="line-height: 38px;">00:35:15</p>
                            </div><!-- /.panel-body -->
                        </div><!-- /.panel -->
                    </div>
                </div>

            <div class="panel rounded shadow">
                <div class="panel-body bg-twitter">
                    <ul class="list-unstyled no-margin">
                        <li class="text-center">
                            <i class="fa fa-building fa-5x" style="color:white;"></i>
                        </li>
                        <li class="text-center">
                            <h4 class="text-capitalize"><%= order.company.title %></h4>
                        </li>
                        <li>
                            <ul class="list-group no-margin br-3">
                                <li class="list-group-item bg-twitter"><i class="fa fa-envelope mr-5"></i> <%= order.company.email %></li>
                                <li class="list-group-item bg-twitter"><i class="fa fa-phone mr-5"></i> <%= order.company.phone %></li>
                            </ul>
                        </li>
                    </ul><!-- /.list-unstyled -->
                </div><!-- /.panel-body -->
            </div>

            <div class="panel rounded shadow">
                <div class="panel-body bg-soundcloud">
                    <ul class="list-unstyled no-margin">
                        <li class="text-center">
                            <i class="fa fa-car fa-5x" style="color:white;"></i>
                        </li>
                        <li class="text-center">
                            <h4 class="text-capitalize"><%= order.driver.fname %> <%= order.driver.lname %></h4>
                        </li>
                        <li>
                            <ul class="list-group no-margin br-3">
                                <li class="list-group-item bg-soundcloud"><i class="fa fa-envelope mr-5"></i> <%= order.driver.email %></li>
                                <li class="list-group-item bg-soundcloud"><i class="fa fa-phone mr-5"></i> <%= order.driver.phone %></li>
                            </ul>
                        </li>
                    </ul><!-- /.list-unstyled -->
                </div><!-- /.panel-body -->
            </div>

            <div class="panel rounded shadow">
                <div class="panel-body bg-googleplus">
                    <ul class="list-unstyled no-margin">
                        <li class="text-center">
                            <i class="fa fa-taxi fa-5x" style="color:white;"></i>
                        </li>
                        <li class="text-center">
                            <h4 class="text-capitalize"><%= order.car.regnr %></h4>
                        </li>
                        <li>
                            <ul class="list-group no-margin br-3">
                                <li class="list-group-item bg-googleplus"><i class="fa fa-car mr-5"></i> <%= order.car.model %></li>
                            </ul>
                        </li>
                    </ul><!-- /.list-unstyled -->
                </div><!-- /.panel-body -->
            </div>

        </div>
        <div class="col-lg-9 col-md-9 col-sm-8">
            <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Order details</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body no-padding rounded-bottom">
                        <form action="/admin/order/update/<%= order.id %>" method="POST" class="form-horizontal form-bordered">
                            <div class="form-body">

                            <div class="form-group">
                            <label class="col-sm-3 control-label">Client Company</label>
                            <div class="col-sm-9">
                            <select name="company" data-placeholder="Choose a Company" class="chosen-select mb-15" tabindex="2">
                            <option value="<%= order.company.id %>"><%= order.company.title %></option>
                            <% _.each(companies, function (company) { %>
                                <% if(company.id != order.company.id) { %>
                                    <option value="<%= company.id %>"><%= company.title %></option>
                                <% } %>
                            <% }) %>
                            </select>
                            </div>
                            </div><!-- /.form-group -->

                            <div class="form-group">
                            <label class="col-sm-3 control-label">Rate type</label>
                            <div class="col-sm-9">
                            <%
                            var type = order.ratetype;
                            var text;
                            if (type == 'hrate')  {text = 'Hourly Rate';}
                            if (type == 'drate')  {text = 'Daily Rate';}
                            if (type == 'horate') {text = 'Driver only Hourly Rate';}
                            if (type == 'dorate') {text = 'Driver only Daily Rate';}
                            %>
                            <select name="ratetype" data-placeholder="Choose a Company" class="chosen-select mb-15" tabindex="2">
                                <option value="<%= order.ratetype %>"><%= text %></option>
                                <% if (type != 'hrate' ) { %>
                                <option value="hrate">Hourly Rate</option>
                                <% } if (type != 'drate' ) { %>
                                <option value="drate">Daily Rate</option>
                                <% } if (type != 'horate' ) { %>
                                <option value="horate">Driver only Hourly Rate</option>
                                <% } if (type != 'dorate' ) { %>
                                <option value="dorate">Driver only Daily Rate</option>
                                <% } %>
                            </select>
                            </div>
                            </div><!-- /.form-group -->


                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Client Reference number</label>
                                    <div class="col-sm-9">
                                        <input name="referencenr" class="form-control" type="text" value="<%= order.referencenr %>">
                                    </div>
                                </div><!-- /.form-group -->

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">First Name</label>
                                    <div class="col-sm-9">
                                        <input name="clientfname" class="form-control" type="text" value="<%= order.clientfname %>">
                                    </div>
                                </div><!-- /.form-group -->


                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Last Name</label>
                                    <div class="col-sm-9">
                                        <input name="clientlname" class="form-control" type="text" value="<%= order.clientlname %>">
                                    </div>
                                </div><!-- /.form-group -->


                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Client Email</label>
                                    <div class="col-sm-9">
                                        <input name="clientemail" class="form-control" type="text" value="<%= order.clientemail %>">
                                    </div>
                                </div><!-- /.form-group -->


                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Client Phone</label>
                                    <div class="col-sm-9">
                                        <input name="clientphone" class="form-control" type="text" value="<%= order.clientphone %>">
                                    </div>
                                </div><!-- /.form-group -->

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Driver</label>
                                    <div class="col-sm-9">
                                    <select name="driver" data-placeholder="Choose a Driver" class="chosen-select mb-15" tabindex="2">
                                    <option value="<%= order.driver.id %>"><%= order.driver.fname %> <%= order.driver.lname %></option>
                                    <% _.each(drivers, function (driver) { %>
                                        <% if(driver.id != order.driver.id) { %>
                                            <option value="<%= driver.id %>"><%= driver.fname %> <%= driver.lname %></option>
                                        <% } %>
                                    <% }) %>
                                    </select>
                                    </div>
                            </div><!-- /.form-group -->

                            <div class="form-group">
                                    <label class="col-sm-3 control-label">Car</label>
                                    <div class="col-sm-9">
                                    <select name="car" data-placeholder="Choose a Car" class="chosen-select mb-15" tabindex="2">
                                    <option value="<%= order.car.id %>"><%= order.car.regnr %> - <%= order.car.model %></option>
                                    <% _.each(cars, function (car) { %>
                                        <% if(car.id != order.car.id) { %>
                                            <option value="<%= car.id %>"><%= car.regnr %> - <%= car.model %></option>
                                        <% } %>
                                    <% }) %>
                                    </select>
                                    </div>
                            </div><!-- /.form-group -->



                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Pickup Location</label>
                                    <div class="col-sm-9">
                                        <input name="pickuplocation" class="form-control" type="text" value="<%= order.pickuplocation %>">
                                    </div>
                                </div><!-- /.form-group -->

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Other Stops</label>
                                    <div class="col-sm-9">
                                        <input name="otherstops" type="text" value="<%= order.otherstops %>" data-role="tagsinput" class="form-control" placeholder="Type address and hit enter" />
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Final Destination</label>
                                    <div class="col-sm-9">
                                        <input name="finaldestination" class="form-control" type="text" value="<%= order.finaldestination %>">
                                    </div>
                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Pickup date</label>
                                    <div class="col-sm-9">
                                        <input name="pickupdate" type="text" class="form-control" value="<%= order.pickupdate %>" data-date-format="yyyy/mm/dd" id="dp2">
                                    </div>
                                </div><!-- /.form-group -->

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Pickup time</label>
                                    <div class="col-sm-9">
                                        <input name="pickuptime" class="form-control" type="text" value="<%= order.pickuptime %>">
                                    </div>
                                </div><!-- /.form-group -->

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Flight Number</label>
                                    <div class="col-sm-9">
                                        <input name="flightnumber" class="form-control" type="text" value="<%= order.flightnumber %>">
                                    </div>
                                </div><!-- /.form-group -->


                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Extra notes</label>
                                    <div class="col-sm-9">
                                        <textarea name="extranotes" class="form-control" rows="5"><%= order.extranotes %></textarea>
                                    </div>
                                </div>

                            </div><!-- /.form-body -->
                            <div class="form-footer">
                                <div class="pull-right">
                                    <a href="javascript:void(0);" class="btn btn-danger mr-5" data-toggle="modal" data-target=".ec-delete">Cancel Order</a>
                                    <input class="btn btn-success" type="submit" value="Update Order" />
                                </div>
                                <div class="clearfix"></div>
                            </div><!-- /.form-footer -->
                        </form>
                    </div><!-- /.panel-body -->
                </div><!-- /.panel -->
                <!--/ End input fields - horizontal form -->

        </div>
        </div><!-- /.row -->

    </div><!-- /.body-content -->
    <!--/ End body content -->

</section><!-- /#page-content -->
<!--/ END PAGE CONTENT -->
<div class="modal fade ec-delete" tabindex="-1" role="dialog" aria-hidden="true">
<div class="modal-dialog modal-lg">
<div class="modal-content">
<div class="panel panel-danger">
<div class="panel-heading">
    <div class="pull-left">
        <h3 class="panel-title">Cancel this order?</h3>
    </div>
    <div class="pull-right">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    </div>
    <div class="clearfix"></div>
</div>
<div class="panel-body no-padding rounded-bottom">
    <form action="/admin/order/destroy/<%= order.id %>" method="POST" class="form-horizontal form-bordered">
        <div class="form-body">
            <div class="gap-30"></div>
            <h4 class="text-center">Are you sure, you want to cancel this order? Data recovery will not be possible!</h4>
            <div class="gap-30"></div>
        </div><!-- /.form-body -->
        <div class="form-footer">
            <div class="pull-right">
                <button class="btn btn-success mr-5" data-dismiss="modal">Abort Operation</button>
                <input class="btn btn-danger" type="submit" value="Cancel" />
            </div>
            <div class="clearfix"></div>
        </div><!-- /.form-footer -->
    </form>
</div><!-- /.panel-body -->
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/ End table in modal element -->