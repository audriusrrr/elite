            <div class="clearfix"></div>
        </div><!-- /.form-footer -->
    </form>
</div><!-- /.panel-body -->
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/ End table in modal element -->