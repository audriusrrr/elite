<!-- START @PAGE CONTENT -->
<section id="page-content">
    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-building"></i>Companies</h2>
    </div><!-- /.header-content -->
    <!--/ End page header -->

    <!-- Start body content -->
    <div class="body-content animated fadeIn">

        <div class="row">
            <div class="col-md-12">
                <!-- Start datatable using dom -->
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">List of all client companies</h3>
                        </div>
                        <div class="pull-right inner-client-button">
                            <button class="btn btn-theme" data-toggle="modal" data-target=".ec-add-new"><i class="fa fa-plus"></i> Add New Company</button>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                    <!-- Start datatable -->
                    <table id="datatable-dom" class="table table-striped table-success">
                    <thead>
                    <tr>
                        <th data-class="expand">Company</th>
                        <th data-hide="phone">Contact Phone</th>
                        <th data-hide="phone">Email</th>
                        <th data-hide="phone">Responsible Person</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% _.each(companies, function (company) { %>
                    <tr>
                        <td><a href="/admin/company/<%= company.id %>"><%= company.title %></a></td>
                        <td><%= company.phone %></td>
                        <td><%= company.email %></td>
                        <td><%= company.responsible %></td>
                    </tr>
					<% }) %>
                    </tbody>
                    </table>
                    <!--/ End datatable -->
                    </div><!-- /.panel-body -->
                </div><!-- /.panel -->
                <!--/ End datatable using dom -->

            </div><!-- /.col-md-12 -->
        </div><!-- /.row -->

    </div><!-- /.body-content -->
    <!--/ End body content -->

</section><!-- /#page-content -->
<!--/ END PAGE CONTENT -->
<!-- Start table in modal element -->
<div class="modal fade ec-add-new" tabindex="-1" role="dialog" aria-hidden="true">
<div class="modal-dialog modal-lg">
<div class="modal-content">
<div class="panel panel-success">
<div class="panel-heading">
    <div class="pull-left">
        <h3 class="panel-title">Add new company</h3>
    </div>
    <div class="pull-right">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    </div>
    <div class="clearfix"></div>
</div>
<div class="panel-body no-padding rounded-bottom">
    <form action="/admin/companies/create/" class="form-horizontal form-bordered">
        <div class="form-body">
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="title" placeholder="Company Name" type="text">
                    </div>
                </div><!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="responsible" placeholder="Responsible Person" type="text">
                    </div>
                </div><!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="phone" placeholder="Phone" type="text">
                    </div>
                </div><!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="address1" placeholder="1st Address line" type="text">
                    </div>
                </div><!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="address2" placeholder="2nd Address line" type="text">
                    </div>
                </div><!-- /.form-group -->
            </div><!-- end of col -->
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="hrate" placeholder="Hourly Rate" type="text">
                    </div>
                </div><!-- /.form-group -->

                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="drate" placeholder="Daily Rate" type="text">
                    </div>
                </div><!-- /.form-group -->

                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="horate" placeholder="Driver only Hourly Rate" type="text">
                    </div>
                </div><!-- /.form-group -->

                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="dorate" placeholder="Driver only Daily Rate" type="text">
                    </div>
                </div><!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="email" placeholder="Email" type="text">
                    </div>
                </div><!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-12">
                        <input class="form-control" required name="password" placeholder="Password" type="password">
                    </div>
                </div><!-- /.form-group -->
            </div><!-- end of col -->
        </div><!-- /.form-body -->
        <div class="form-footer">
            <div class="pull-right">
                <button class="btn btn-danger mr-5" data-dismiss="modal">Cancel</button>
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.form-footer -->
    </form>
</div><!-- /.panel-body -->
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/ End table in modal element -->