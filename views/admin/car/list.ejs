<!-- START @PAGE CONTENT -->
<section id="page-content">
    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-taxi"></i>Cars</h2>
    </div><!-- /.header-content -->
    <!--/ End page header -->

    <!-- Start body content -->
    <div class="body-content animated fadeIn">

        <div class="row">
            <div class="col-md-12">
                <!-- Start datatable using dom -->
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">List of all cars</h3>
                        </div>
                        <div class="pull-right inner-client-button">
                            <button class="btn btn-theme" data-toggle="modal" data-target=".ec-add-new"><i class="fa fa-plus"></i> Add New Car</button>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body">
                    <!-- Start datatable -->
                    <table id="datatable-dom" class="table table-striped table-success">
                    <thead>
                    <tr>
                        <th data-class="expand">Car registration number</th>
                        <th data-hide="phone">Model</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% _.each(cars, function (car) { %>
                    <tr>
                        <td><a href="/admin/car/<%= car.id %>"><%= car.regnr %></a></td>
                        <td><%= car.model %></td>
                    </tr>
					<% }) %>
                    </tbody>
                    </table>
                    <!--/ End datatable -->
                    </div><!-- /.panel-body -->
                </div><!-- /.panel -->
                <!--/ End datatable using dom -->

            </div><!-- /.col-md-12 -->
        </div><!-- /.row -->

    </div><!-- /.body-content -->
    <!--/ End body content -->

</section><!-- /#page-content -->
<!--/ END PAGE CONTENT -->
<!-- Start table in modal element -->
<div class="modal fade ec-add-new" tabindex="-1" role="dialog" aria-hidden="true">
<div class="modal-dialog modal-lg">
<div class="modal-content">
<div class="panel panel-success">
<div class="panel-heading">
    <div class="pull-left">
        <h3 class="panel-title">Add new car</h3>
    </div>
    <div class="pull-right">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    </div>
    <div class="clearfix"></div>
</div>
<div class="panel-body no-padding rounded-bottom">
    <form action="/admin/cars/create/" class="form-horizontal form-bordered">
        <div class="form-body">
            <div class="form-group">
                <label class="col-sm-3 control-label">Car Registration Number</label>
                <div class="col-sm-9">
                    <input class="form-control" required name="regnr" type="text">
                </div>
            </div><!-- /.form-group -->
            <div class="form-group">
                <label class="col-sm-3 control-label">Model</label>
                <div class="col-sm-9">
                    <input class="form-control" required name="model" type="text">
                </div>
            </div><!-- /.form-group -->
        </div><!-- /.form-body -->
        <div class="form-footer">
            <div class="pull-right">
                <button class="btn btn-danger mr-5" data-dismiss="modal">Cancel</button>
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.form-footer -->
    </form>
</div><!-- /.panel-body -->
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/ End table in modal element -->