<section id="page-content">

    <!-- Start page header -->
    <div class="header-content">
        <h2><i class="fa fa-key"></i>Admin</h2>
    </div><!-- /.header-content -->
    <!--/ End page header -->

    <!-- Start body content -->
    <div class="body-content animated fadeIn">

        <div class="row">

            <div class="col-md-6">

                <!-- Start input fields - horizontal form -->
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Password</h3>
                        </div>
                        <div class="pull-right">
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body no-padding rounded-bottom">
                        <form action="/admin/user/update/<%= user.id %>" method="POST" class="form-horizontal form-bordered">
                            <div class="form-body">
                                <div class="gap-30"></div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <input class="form-control" placeholder="Password" name="password" type="password" required>
                                    </div>
                                </div><!-- /.form-group -->
                                <div class="gap-30"></div>
                            </div><!-- /.form-body -->
                            <div class="form-footer">
                                <div class="pull-right">
                                    <!-- <button class="btn btn-danger mr-5" data-dismiss="modal">Cancel</button> -->
                                    <input class="btn btn-warning" type="submit" value="Change Password" />
                                </div>
                                <div class="clearfix"></div>
                            </div><!-- /.form-footer -->
                        </form>
                    </div><!-- /.panel-body -->
                </div><!-- /.panel -->
                <!--/ End input fields - horizontal form -->

            </div><!-- /.col-md-6 -->

            <div class="col-md-6">

                <!-- Start input fields - horizontal form -->
                <div class="panel rounded shadow">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h3 class="panel-title">Email</h3>
                        </div>
                        <div class="pull-right">
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.panel-heading -->
                    <div class="panel-body no-padding rounded-bottom">
                        <form action="/admin/user/update/<%= user.id %>" method="POST" class="form-horizontal form-bordered">
                            <div class="form-body">
                                <div class="gap-30"></div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <input class="form-control" placeholder="Email" name="email" type="email" value="<%= user.email %>" required>
                                    </div>
                                </div><!-- /.form-group -->
                                <div class="gap-30"></div>
                            </div><!-- /.form-body -->
                            <div class="form-footer">
                                <div class="pull-right">
                                    <!-- <button class="btn btn-danger mr-5" data-dismiss="modal">Cancel</button> -->
                                    <input class="btn btn-info" type="submit" value="Change Email" />
                                </div>
                                <div class="clearfix"></div>
                            </div><!-- /.form-footer -->
                        </form>
                    </div><!-- /.panel-body -->
                </div><!-- /.panel -->
                <!--/ End input fields - horizontal form -->

            </div><!-- /.col-md-6 -->
        </div><!-- /.row -->

    </div><!-- /.body-content -->
    <!--/ End body content -->



</section><!-- /#page-content -->
<!--/ END PAGE CONTENT -->
